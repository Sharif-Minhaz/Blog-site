<%- include("../../partials/head.ejs") %>

    <div class="container my-container py-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card card-body">
                    <h4>Login to Your Account</h4>
                    <form action="/auth/login" method="post">
                        <div class="form-floating mb-3">
                            <input type="email" name="email" class="form-control <%= (error.email || error.authErr) && "is-invalid" %>" id="floatingEmail" placeholder="email" value="<%= value.email && value.email %>">
                            <label for="floatingEmail">Email</label>
                            <div class="invalid-feedback">
                                <%= error.authErr && "Wrong username or password." %> 
                            </div>
                            <div class="invalid-feedback">
                                <%= error.email && error.email %> 
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" name="password" class="form-control <%= (error.password || error.authErr) && "is-invalid" %>" id="floatingPassword" placeholder="Password">
                            <label for="floatingPassword">Password</label>
                            <div class="invalid-feedback">
                                <%= error.password && error.password %> 
                            </div>
                        </div>
                        <input type="submit" class="btn btn-primary" value="Login">
                    </form>
                    <p class="pt-3 text-center">Don't have an account? <a href="/auth/signup">Create One</a></p>
                </div>
            </div>
        </div>
    </div>
    <%- include("../../partials/footer.ejs") %>

</body>
</html>