		<!-- have to remove something -->
        <%- include("../../../partials/head.ejs") %>

		<div class="container-fluid">
			<div class="row">
				<div class="col-md-2">
                    <%- include("../../../partials/sidebar.ejs")  %>
				</div>
				<div class="col-md-10 my-5">
					<div class="card card-body mx-5">
						<h4 class="py-2">List of my posts</h4>
                        <div class="row">
                            <% if(posts.length === 0) { %> 
                                <div class="text-center text-muted">
                                    <p>There are no post available.</p>
                                    <a href="/posts/create" class="btn btn-primary">Create Now</a>
                                </div>
                            <% } else { %>
                                <% for (let post of posts.reverse()){ %>
                                    <div class="card col-sm-3 m-3">
                                        <% if(post.thumbnail) { %>
                                            <img src="<%= post.thumbnail %> " alt="<%= post.title %>" class="card-img-top mt-3" />
                                        <% } %>  
                                        <div class="py-2">
                                            <a href="/posts/edit/<%= post._id %> ">
                                                <h5 style="color: #222;"><%= post.title %> </h5>
                                            </a>
                                        </div>
                                    </div>
                                <% } %>   
                            <% } %> 
                        </div>
					</div>
				</div>
			</div>
		</div>

		<%- include("../../../partials/footer.ejs") %>

	</body>
</html>
